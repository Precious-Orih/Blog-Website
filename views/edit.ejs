<%- include('partials/header.ejs') %>
<body>
    <h1>Edit Blog Post</h1>
    <form method="post" action="/edit/<%= post.id %>" class='post-form1'>
        <label for="title" >Title:</label>
        <input type="text" id="title" name="title" value="<%= post.title %>" required class='post-title'>
        <label for="content">Content:</label>
        <textarea id="content" name="content" required class='post-txt'><%= post.content %></textarea>
        <button type="submit" class='btm' style="background-color: palevioletred; color:  rgb(255, 240, 247);">Update Post</button>
    </form>
</body>
